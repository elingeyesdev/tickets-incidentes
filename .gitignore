# =============================================================================
# HELPDESK SYSTEM - GIT IGNORE CONFIGURATION
# =============================================================================
# This file specifies intentionally untracked files that Git should ignore.
# See: https://git-scm.com/docs/gitignore
# =============================================================================

# -----------------------------------------------------------------------------
# CRITICAL: Environment & Secrets (NEVER COMMIT THESE!)
# -----------------------------------------------------------------------------
.env
.env.local
.env.production
.env.*.local
.env.backup
*.key
*.pem
*.crt
*.csr

# -----------------------------------------------------------------------------
# Dependencies (Generated by package managers - NOT in Git)
# -----------------------------------------------------------------------------
/vendor/
/node_modules/
/bower_components/

# -----------------------------------------------------------------------------
# Laravel Generated Files & Caches
# -----------------------------------------------------------------------------
/storage/*.key
/storage/app/*
!/storage/app/.gitkeep
!/storage/app/public/
/storage/app/public/*
!/storage/app/public/.gitkeep

# Pero S√ç trackear feature resources (logos, seeds, etc)
!app/Features/*/resources/
!app/Features/*/resources/**

/storage/framework/cache/*
!/storage/framework/cache/.gitkeep
!/storage/framework/cache/data/
/storage/framework/cache/data/*
!/storage/framework/cache/data/.gitkeep

/storage/framework/sessions/*
!/storage/framework/sessions/.gitkeep

/storage/framework/testing/*
!/storage/framework/testing/.gitkeep

/storage/framework/views/*
!/storage/framework/views/.gitkeep

/storage/logs/*
!/storage/logs/.gitkeep

# GeoIP database (large binary file, downloaded per environment)
/storage/geoip/*
!/storage/geoip/.gitkeep

/storage/pail

/bootstrap/cache/*
!/bootstrap/cache/.gitkeep

# -----------------------------------------------------------------------------
# Database Files (SQLite for local testing)
# -----------------------------------------------------------------------------
*.sqlite
*.sqlite-journal
database/*.sqlite
database/*.sqlite-journal

# -----------------------------------------------------------------------------
# Compiled Assets (Generated by Vite/Mix)
# -----------------------------------------------------------------------------
/public/hot
/public/build
/public/storage
/public/css
/public/js
/public/mix-manifest.json

# -----------------------------------------------------------------------------
# Test Coverage & Reports
# -----------------------------------------------------------------------------
coverage/
.phpunit.result.cache
.phpunit.cache
# phpunit.xml is NOT ignored - it's a configuration file that should be committed
.php_cs.cache
.php-cs-fixer.cache

# -----------------------------------------------------------------------------
# IDE & Editor Files
# -----------------------------------------------------------------------------
.idea/
.vscode/
.fleet/
.nova/
.zed/
.claude/
.phpactor.json
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# Sublime Text
*.sublime-project
*.sublime-workspace

# PHPStorm
.phpstorm.meta.php
_ide_helper.php
_ide_helper_models.php

# Laravel Idea (PHPStorm plugin)
/.idea/laravel-idea

# -----------------------------------------------------------------------------
# Docker Volumes & Runtime (Managed by Docker)
# -----------------------------------------------------------------------------
# Note: docker-compose.yml and Dockerfiles ARE committed
# Only ignore runtime data and volumes
postgres_data/
redis_data/
mysql_data/
*.pid
*.sock

# -----------------------------------------------------------------------------
# Backups & Temporary Files
# -----------------------------------------------------------------------------
/backups/*.sql
/backups/*.gz
/backups/*.zip
*.backup
*.bak
*.tmp
*.temp
*.log

# -----------------------------------------------------------------------------
# Operating System Files
# -----------------------------------------------------------------------------
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

