# =============================================================================
# HELPDESK SYSTEM - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and update the values for your environment
# For development: Use Docker services (postgres, redis, mailpit)
# For production: Update with your production credentials
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_NAME="Helpdesk System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=helpdesk
DB_USERNAME=helpdesk
DB_PASSWORD=helpdesk_password

# Test Database
DB_TEST_CONNECTION=pgsql
DB_TEST_HOST=postgres
DB_TEST_PORT=5432
DB_TEST_DATABASE=helpdesk_test
DB_TEST_USERNAME=helpdesk
DB_TEST_PASSWORD=helpdesk_password

# Multi-schema PostgreSQL configuration
DB_SCHEMA_AUTH=auth
DB_SCHEMA_BUSINESS=business
DB_SCHEMA_TICKETING=ticketing
DB_SCHEMA_AUDIT=audit

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# CACHE CONFIGURATION
# -----------------------------------------------------------------------------
CACHE_STORE=redis
CACHE_PREFIX=helpdesk_cache

# -----------------------------------------------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------------------------------------------
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# -----------------------------------------------------------------------------
# QUEUE CONFIGURATION
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=redis
QUEUE_REDIS_CONNECTION=default

# -----------------------------------------------------------------------------
# BROADCASTING
# -----------------------------------------------------------------------------
BROADCAST_CONNECTION=log

# -----------------------------------------------------------------------------
# FILESYSTEM
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=local

# -----------------------------------------------------------------------------
# MAIL CONFIGURATION (Development: Mailpit, Production: SMTP)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@helpdesk.local"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# AWS CONFIGURATION (Optional - For future cloud storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# VITE CONFIGURATION (Frontend Build Tool)
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_BACKEND_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# GRAPHQL CONFIGURATION (Lighthouse)
# -----------------------------------------------------------------------------
LIGHTHOUSE_CACHE_ENABLE=true
LIGHTHOUSE_CACHE_VERSION=1
LIGHTHOUSE_SECURITY_DISABLE_INTROSPECTION=false

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION (For API)
# -----------------------------------------------------------------------------
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# -----------------------------------------------------------------------------
# OAUTH CONFIGURATION (Google Login)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (Disabled by default)
# -----------------------------------------------------------------------------
TELESCOPE_ENABLED=false
PULSE_ENABLED=false
NIGHTWATCH_ENABLED=false